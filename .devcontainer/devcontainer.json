{
  "image": "sagemath/sagemath:latest",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "sage -pip install -r requirements.txt",
  "postCreateCommand": "sage -sh -c 'jupyter kernelspec install --user /usr/share/sagemath/kernel'",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter"
      ]
    }
  }
}
